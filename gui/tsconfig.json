{
  "compilerOptions": {
    /* ---- basic JS/TS options ---- */
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2021", "DOM"],

    /* ---- project settings ---- */
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"]
    },

    /* ---- interoperability & speed ---- */
    "esModuleInterop": true,
    "skipLibCheck": true
  },

  "include": ["src/**/*"]
}
